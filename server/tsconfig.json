{
  "compilerOptions": {
    "target": "ES2020",                    // modern JS output
    "module": "CommonJS",                  // Node.js module system
    "rootDir": "src",                      // source folder for .ts files
    "outDir": "dist",                      // compiled output folder
    "esModuleInterop": true,               // allow default import from commonjs
    "forceConsistentCasingInFileNames": true,
    "strict": true,                        // enable all strict type-checking options
    "skipLibCheck": true                   // skip checking type declarations
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
